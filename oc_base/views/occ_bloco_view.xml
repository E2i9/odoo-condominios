<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE openerp>
<openerp>
  <data>
  	<!-- Action to open OCCadastro.Bloco -->
  	<act_window id="action_occ_bloco"
  		name="Registro de Blocos"
  		res_model="occ.bloco"
  		view_mode="tree,form"/>

  	<!-- Menu item to open OCCadastro Bloco -->
  	<menuitem id="menu_occ_bloco"
  		name="Bloco"
  		parent="oc_Register"
  		sequence="1"
  		action="action_occ_bloco" />
  </data>
  <record id="view_tree_occ_bloco" model="ir.ui.view">
  	<field name="name">Bloco tree</field>
  	<field name="model">occ.bloco</field>
  	<field  name="arch" type="xml">
   		<tree editable="True">
   			<field name="name"/>
   		</tree>
   	</field>
  </record>
  <record id="view_form_occ_bloco" model="ir.ui.view">
  	<field name="name">Bloco Form</field>
  	<field name="model">occ.bloco</field>
  	<field  name="arch" type="xml">
   		<form string="Nome do Bloco">
   			<header>
   				<!-- Aqui vão os botões -->
   			</header>
   			<sheet>
			  <group name="group_top">
      			<group name="group_left">
        			<field name="name"/>
	  		<!--	<field name="apto_ids"/>
	  				<field name="morador_ids"/>
	  				<field name="vaga_ids"/> -->	
      			</group>
      			<group name="group_right">
					<!-- Aqui vai o conteúdo -->
      			</group>
    		  </group>
   			</sheet>
  		</form>
   	</field>
  </record>
</openerp>