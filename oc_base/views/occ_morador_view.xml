<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE openerp>
<openerp>
  <data>
  	<!-- Action to open OCCadastro.Moradores -->
  	<act_window id="action_occ_morador"
  		name="Registro de Morador"
  		res_model="occ.morador"
  		view_mode="tree,form"/>

  	<!-- Menu item to open OCCadastro.Morador -->
  	<menuitem id="menu_occ_morador"
  		name="Morador"
  		parent="oc_Register"
  		sequence="3"
  		action="action_occ_morador" />  	
  </data>
  <record id="view_tree_occ_morador" model="ir.ui.view">
  	<field name="name">Morador tree</field>
  	<field name="model">occ.morador</field>
  	<field  name="arch" type="xml">
   		<tree editable="True">
   			<field name="name"/>
   			<field name="cpf"/>
   			<field name="rg"/>
   			<field name="fone"/>
   			<field name="celular"/>
   			<field name="bloco_id" widget="selection"/>
   			<field name="apto_id" widget="selection"/>
   		</tree>
   	</field>
  </record>  <record id="view_form_occ_morador" model="ir.ui.view">
  	<field name="name">Morador Form</field>
  	<field name="model">occ.morador</field>
  	<field  name="arch" type="xml">
   		<form string="Morador">
   			<header>
   				<!-- Aqui vão os botões -->
   			</header>
   			<sheet>
			  <group name="group_top">
      			<group name="group_left">
			   		<field name="image" widget="image"/>
        			<field name="name" label="Nome completo"/>
        			<field name="cpf"/>
        			<field name="rg"/>
        			<field name="fone" label="Telefone Fixo"/>
        			<field name="celular" label="Telefone Celular"/>
        			<field name="bloco_id" widget="selection"/>
	  				<field name="apto_id" widget="selection"/>
      			</group>
      			<group name="group_right">
	  				<field name="veiculo_ids" nolabel="1"/>
      			</group>
    		  </group>
   			</sheet>
  		</form>
   	</field>
  </record>
</openerp>