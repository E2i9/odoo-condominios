<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE openerp>
<openerp>
  <data>
  	<!-- Action to open OCCadastro.Vaga -->
  	<act_window id="action_occ_vaga_moto" name="Registro de Vagas Motos" res_model="occ.vaga.moto" view_mode="tree,form"/>

  	<!-- Menu item to open OCCadastro Vaga -->
  	<menuitem id="menu_occ_vaga_moto" name="Vagas Motos" parent="oc_Register_Vagas" sequence="2" action="action_occ_vaga_moto" groups="group_occ_manager,group_occ_user"/>
  </data>
  <record id="view_tree_occ_vaga_moto" model="ir.ui.view">
  	<field name="name">Vaga Moto tree</field>
  	<field name="model">occ.vaga.moto</field>
  	<field name="groups_id" eval="[(4, ref('group_occ_manager')),(4, ref('group_occ_user'))]"/>
  	<field  name="arch" type="xml">
   		<tree editable="True">
   			<field name="name"/>
        	<field name="bloco_id" widget="selection"/>
        	<field name="apto_id" widget="selection"/>
   		</tree>
   	</field>
  </record>
  <record id="view_form_occ_vaga_moto" model="ir.ui.view">
  	<field name="name">Vaga Moto Form</field>
  	<field name="model">occ.vaga.moto</field>
  	<field name="groups_id" eval="[(4, ref('group_occ_manager')),(4, ref('group_occ_user'))]"/>
  	<field  name="arch" type="xml">
   		<form string="Vaga Moto">
   			<header>
   				<!-- Aqui vão os botões -->
   			</header>
   			<sheet>
			  <group name="group_top">
      			<group name="group_left">
        			<field name="name"/>
        			<field name="tag_ids" widget="many2many_tags"/>
      			</group>
      			<group name="group_right">
        			<field name="bloco_id" widget="selection"/>
        			<field name="apto_id" widget="selection"/>
      			</group>
    		  </group>
   			</sheet>
  		</form>
   	</field>
  </record>
</openerp>