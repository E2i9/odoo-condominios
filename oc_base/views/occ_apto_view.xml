<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>
  	<!-- Action to open OCCadastro.Apto -->
  	<act_window id="action_occ_apto"
  		name="Registro de Apartamentos"
  		res_model="occ.apto"
  		view_mode="tree,form"/>

  	<!-- Menu item to open OCCadastro Apto -->
  	<menuitem id="menu_occ_apto"
  		name="Apartamento"
  		parent="oc_Register"
  		sequence="2"
  		action="action_occ_apto" />  	
  </data>
  <record id="view_form_occ_apto" model="ir.ui.view">
  	<field name="name">Apartamento Form</field>
  	<field name="model">occ.apto</field>
  	<field  name="arch" type="xml">
   		<form string="Nome do Apartamento">
   			<header>
   				<!-- Aqui vão os botões -->
   			</header>
   			<sheet>
			  <group name="group_top">
      			<group name="group_left">
        			<field name="name"/>
	  				<field name="bloco_id"/>
	  				<field name="morador_ids"/>
	  				<field name="vaga_id"/>
      			</group>
      			<group name="group_right">
					<!-- Aqui vai o conteúdo -->
      			</group>
    		  </group>
   			</sheet>
  		</form>
   	</field>
  </record>

</openerp>