  <record id="view_form_occ_apto" model="ir.ui.view">
  	<field name="name">Apartamento Form</field>
  	<field name="model">occ.apto</field>
  	<field  name="arch" type="xml">
   		<form string="Nome do Apartamento">
   			<header>
   				<!-- Aqui vão os botões -->
   			</header>
   			<sheet>
			  <group name="group_top">
      			<group name="group_left">
        			<field name="name"/>
        			<field name="numero"/>
	  				<field name="bloco_id"/>
      			</group>
      			<group name="group_right">
	  				<!-- Grupo Vazio -->
      			</group>
      			<group name="group_bottom">
	  				<field name="vaga_carro_id"/>
	  				<field name="vaga_moto_id"/>
      				<field name="morador_ids"/>
      			</group>
    		  </group>
   			</sheet>
  		</form>
   	</field>
  </record>
